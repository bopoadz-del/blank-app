# ============================================================================
# ML Platform - Environment Variables
# ============================================================================
# For local development: Copy to .env
# For Render: Auto-configured via render.yaml

# ============================================================================
# API Configuration
# ============================================================================
API_V1_PREFIX=/api/v1
APP_NAME=Reasoner AI Platform
APP_VERSION=1.0.0
ENVIRONMENT=development

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=INFO
WORKERS=1

# ============================================================================
# Security & Authentication
# ============================================================================
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key (optional - for external integrations)
API_KEY_ENABLED=false
API_KEY=your-api-key-change-this-in-production

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/reasoner_platform
DATABASE_ECHO=False

# ============================================================================
# Redis (Optional - for caching/sessions)
# ============================================================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ============================================================================
# CORS (Cross-Origin Resource Sharing)
# ============================================================================
# Local development with Vite frontend
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# ============================================================================
# MLflow (Model Tracking & Versioning)
# ============================================================================
# Local SQLite
MLFLOW_TRACKING_URI=sqlite:///./mlflow.db

# Or external MLflow server:
# MLFLOW_TRACKING_URI=http://mlflow-server:5000

# ============================================================================
# Edge Devices
# ============================================================================
EDGE_NODES=jetson-01,jetson-02

# ============================================================================
# AWS S3 (Optional - for model storage & OTA updates)
# ============================================================================
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# S3_BUCKET=ml-platform-models
# AWS_REGION=us-east-1

# ============================================================================
# Safety Layer Configuration
# ============================================================================
SAFETY_DEPLOYMENT=default
SAFETY_COMPLIANCE_FRAMEWORK=GLOBAL_DEFAULT

# For KSA deployment with additional restrictions:
# SAFETY_DEPLOYMENT=ksa
# SAFETY_COMPLIANCE_FRAMEWORK=KSA_REGULATIONS
